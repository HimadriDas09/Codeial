<header>
    Page Header
    <!-- so how would the views know > if user is authenticated or not > res.locals will contain the currently authenticated user -->
    <ul>
        <% if(locals.user){ %>
            <!-- no null > display: user_name and sign_out option -->
            <li>
                <a href="/users/profile">
                    <%= user.name %>
                </a>
            </li>
            <li>
                <a onclick="event.preventDefault(); document.getElementById('hidden-logout-form').submit()" style="cursor: pointer;">Sign Out</a>
                
                <form id="hidden-logout-form" action="/users/sign-out" method="POST" style="display: none;">

                </form>
            </li>
        <% }else{ %> 
            <!-- null > display: sign_in and sign_up -->
            <li>
                <a href="/users/sign-in">Sign In</a>
            </li>
            <li>
                <a href="/users/sign-up">Sign Up</a>
            </li>
        <% } %>  
    </ul> 

</header>